@{
    ViewData["Title"] = "Home Page";
}

@model Survey

<div class="text-center">
    <form asp-action="Submit" asp-controller="Home" method="post">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name"><br>

        <span asp-validation-for="Dojo"></span>
        <label asp-for="Dojo"></label>
        <select asp-for="Dojo">
            <option value="Seattle">Seattle</option>
            <option value="San Francisco">San Francisco</option>
            <option value="Austin">Austin</option>
        </select><br>

        <span asp-validation-for="Language"></span>
        <label asp-for="Language"></label>
        <select asp-for="Language">
            <option value="C#">C#</option>
            <option value="Python">Python</option>
            <option value="React/Node">React/Node</option>
        </select><br>

        <span asp-validation-for="Comment"></span>
        <label asp-for="Comment"></label><br>
        <textarea asp-for="Comment" style = "width: 350px; height: 75px; padding-top: 0; padding-left: 0;"></textarea><br>
        
        <button>Submit</button>
    </form>
</div>
